<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="account" class="com.study.lab1.dao.AccountDao">
        <property name="dataSource" ref="mockDataSource"/>
    </bean>

    <bean id="mockDataSource" class="com.study.lab1.dao.MockDataSource"/>

    <bean id="user" class="com.study.lab1.dao.UserDao">
        <property name="dataSource" ref="mockDataSource"/>
    </bean>

    <context:annotation-config/>
    <context:component-scan base-package="com.study.lab1.service"/>
</beans>